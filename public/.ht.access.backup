# Apache configuration file
# http://httpd.apache.org/docs/2.2/mod/quickreference.html

# Note: ".htaccess" files are an overhead for each request. This logic should
# be placed in your Apache config whenever possible.
# http://httpd.apache.org/docs/2.2/howto/htaccess.html

# Turning on the rewrite engine is necessary for the following rules and
# features. "+FollowSymLinks" must be enabled for this to work symbolically.

#ForceType application/octet-stream
#<FilesMatch "(?i)\.(gif|jpe?g|png)$">
#	ForceType none
#</FilesMatch>

# For all files not found in the file system, reroute the request to the
# "index.php" front controller, keeping the query string intact

<IfModule mod_rewrite.c>
	
	Options +FollowSymLinks
	RewriteEngine On
	RewriteBase /
	
	SetEnv downgrade-1.0
	RewriteRule . - [E=no-gzip:1]

	#RewriteRule ^soap$ /tr/soap [P]
	#Redirect 301  /soap.php /tr/soap/
	#Redirect 301 /soap.php /tr/soap [NC,P]

	#RewriteCond %{REQUEST_URI} /soap.php
	#RewriteRule (.*) $/soap1 [L]

	#RewriteCond %{REQUEST_URI} ^/soap.php [NC]
	#RewriteRule ^(.*)$ http://v2.galepress.com/tr/soap [R=301,NC]

	RewriteRule ^tr/$ website/anasayfa.php [L]
	RewriteRule ^tr/hakkimizda$ website/hakkimizda.php [L]
	RewriteRule ^tr/galepress-nedir$ website/nedir.php [L]
	RewriteRule ^tr/urunler$ website/nesatar.php [L]
	RewriteRule ^tr/avantajlar$ website/avantajlar.php [L]
	RewriteRule ^tr/musterilerimiz$ website/musterilerimiz.php [L]
	RewriteRule ^tr/calisma-yapisi$ website/calismayapisi.php [L]
	RewriteRule ^tr/iletisim$ website/iletisim.php [L]
	RewriteRule ^tr/sss$ website/sss.php [L]
	RewriteRule ^tr/site-haritasi$ website/sitemap.php [L]
	RewriteRule ^tr/fiyatlandirma$ website/fiyatlandirma.php [L]
	RewriteRule ^tr/siparis$ website/siparis.php [L]
	RewriteRule ^tr/arama.php$ website/arama.php [L]

	RewriteRule ^en/$ website/anasayfa.php [L]
	RewriteRule ^en/about-us$ website/hakkimizda.php [L]
	RewriteRule ^en/what-is-galepress$ website/nedir.php [L]
	RewriteRule ^en/products$ website/nesatar.php [L]
	RewriteRule ^en/advantages$ website/avantajlar.php [L]
	RewriteRule ^en/our-customers$ website/musterilerimiz.php [L]
	RewriteRule ^en/work-flow$ website/calismayapisi.php [L]
	RewriteRule ^en/contact$ website/iletisim.php [L]
	RewriteRule ^en/faq$ website/sss.php [L]
	RewriteRule ^en/sitemap$ website/sitemap.php [L]
	RewriteRule ^en/order$ website/siparis.php [L]
	RewriteRule ^en/arama.php$ website/arama.php [L]

	RewriteRule ^de/$ website/anasayfa.php [L]
	RewriteRule ^de/uber-uns$ website/hakkimizda.php [L]
	RewriteRule ^de/was-ist-galepress$ website/nedir.php [L]
	RewriteRule ^de/produkte$ website/nesatar.php [L]
	RewriteRule ^de/vorteile$ website/avantajlar.php [L]
	RewriteRule ^de/unsere-kunden$ website/musterilerimiz.php [L]
	RewriteRule ^de/arbeitsweise$ website/calismayapisi.php [L]
	RewriteRule ^de/kontakt$ website/iletisim.php [L]
	RewriteRule ^de/faq$ website/sss.php [L]
	RewriteRule ^de/sitemap$ website/sitemap.php [L]
	RewriteRule ^de/bestellen$ website/siparis.php [L]
	RewriteRule ^de/arama.php$ website/arama.php [L]

	RewriteRule ^newsletter-subscribe$ website/php/newsletter-subscribe.php [L]

	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
